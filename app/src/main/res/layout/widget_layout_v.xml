<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/widget_background"
	android:gravity="center"
	android:orientation="vertical"
	android:padding="@dimen/widget_margin"
	android:theme="@style/AppWidget">

	<LinearLayout
		android:id="@+id/rates"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:divider="@drawable/separator"
		android:orientation="vertical"
		android:showDividers="middle">

	</LinearLayout>

	<TextView
		android:id="@+id/updateTimestamp"
		style="@style/AppWidget.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:layout_marginTop="@dimen/widget_group_title_margin"
		android:gravity="end"
		android:text="@string/text_updated"
		android:textColor="@color/update_timestamp"/>

</LinearLayout>