<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:theme="@style/AppTheme.Dialog.Base"
				style="@style/AppTheme.CalculatorLayout">

	<TextView
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_marginLeft="@dimen/calculator_layout_padding"
		android:layout_marginRight="@dimen/calculator_layout_padding"
		android:layout_marginTop="@dimen/calculator_layout_padding"
		android:text="Title"
		style="@style/AppTheme.Dialog.Caption"/>

	<android.support.v7.widget.CardView
		android:id="@+id/expressionCardView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/title"
		android:layout_marginLeft="@dimen/calculator_layout_padding"
		android:layout_marginRight="@dimen/calculator_layout_padding"
		android:layout_marginTop="12dp"
		app:cardCornerRadius="4dp">

		<TextView
			android:id="@+id/expressionTextView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/calculator_horizontal_text_margin"
			android:layout_marginLeft="@dimen/calculator_horizontal_text_margin"
			android:layout_marginRight="@dimen/calculator_horizontal_text_margin"
			android:layout_marginTop="@dimen/calculator_horizontal_text_margin"
			android:background="@android:color/transparent"
			android:gravity="bottom|right"
			android:minLines="2"
			android:text="123.00"/>

	</android.support.v7.widget.CardView>

	<com.khrolenok.rates.ui.layout.CalculatorNumericPadLayout
		android:id="@+id/pad"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="250dp"
		android:layout_below="@+id/expressionCardView"
		android:layout_marginTop="@dimen/calculator_horizontal_text_margin"
		android:columnCount="5"
		android:paddingBottom="@dimen/calculator_layout_padding"
		android:paddingLeft="@dimen/calculator_layout_padding"
		android:paddingRight="@dimen/calculator_layout_padding"
		android:paddingTop="30dp"
		android:rowCount="4">

		<Button
			android:id="@+id/digit_7"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_8"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_9"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/paren"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_paren"
			android:text="@string/paren"/>

		<ImageButton
			android:id="@+id/del"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_del"
			android:longClickable="true"
			android:src="@drawable/ic_backspace"
			/>

		<Button
			android:id="@+id/digit_4"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_5"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_6"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/op_mul"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_mul"
			android:text="@string/op_mul"/>

		<Button
			android:id="@+id/op_div"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_div"
			android:text="@string/op_div"/>

		<Button
			android:id="@+id/digit_1"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_2"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_3"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/op_add"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_add"
			android:text="@string/op_add"/>

		<Button
			android:id="@+id/op_sub"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_sub"
			android:text="@string/op_sub"/>

		<Button
			android:id="@+id/digit_0"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/digit_00"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/dec_point"
			style="@style/AppTheme.CalculatorPadButton"/>

		<Button
			android:id="@+id/op_perc"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_perc"
			android:text="@string/op_perc"/>

		<ImageButton
			android:id="@+id/set"
			style="@style/AppTheme.CalculatorPadButton.Operator"
			android:contentDescription="@string/desc_del"
			android:src="@drawable/ic_check"/>

	</com.khrolenok.rates.ui.layout.CalculatorNumericPadLayout>

	<TextView
		android:id="@+id/resultTextView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/expressionCardView"
		android:layout_marginLeft="@dimen/calculator_layout_padding"
		android:layout_marginRight="@dimen/calculator_layout_padding"
		android:layout_marginTop="@dimen/calculator_horizontal_text_margin"
		android:background="@android:color/transparent"
		android:gravity="bottom|right"
		android:text="= 123.00"/>

</RelativeLayout>
