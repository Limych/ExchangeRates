<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="12dp"
	android:showDividers="middle">

	<TextView
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Title" />

	<android.support.v7.widget.CardView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="4dp">

		<TextView
			android:id="@+id/expressionTextView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/widget_horizontal_text_margin"
			android:layout_marginLeft="@dimen/widget_horizontal_text_margin"
			android:layout_marginRight="@dimen/widget_horizontal_text_margin"
			android:layout_marginTop="@dimen/widget_horizontal_text_margin"
			android:gravity="bottom|right"
			android:minLines="2"
			android:text="123.00" />

	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/resultTextView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom|right"
		android:text="= 123.00" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="5"
		android:orientation="horizontal"
		android:showDividers="middle">

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button7">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="7"
				android:clickable="false"/>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button8">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="8"
				android:clickable="false"/>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button9">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="9"
				android:clickable="false"/>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:id="@+id/buttonBrk">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:clickable="false"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:maxLines="1"
				android:text="(  )" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:longClickable="true"
			android:id="@+id/buttonBS"
			>

			<ImageView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="30dp"
				android:layout_height="fill_parent"
				android:layout_marginBottom="0dp"
				android:layout_marginTop="0dp"
				android:src="@drawable/ic_backspace"
				android:clickable="false"
				/>

		</android.support.v7.widget.CardView>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="5"
		android:orientation="horizontal"
		android:showDividers="middle">

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button4">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="4" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button5">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="5" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button6">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="6" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/buttonMult">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="×" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/buttonDiv">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="/" />

		</android.support.v7.widget.CardView>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="5"
		android:orientation="horizontal"
		android:showDividers="middle">

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button1">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="1" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button2">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="2" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button3">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="3" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/buttonPlus">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="+" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/buttonMinus">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="−" />

		</android.support.v7.widget.CardView>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="5"
		android:orientation="horizontal"
		android:showDividers="middle">

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button0">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="0" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/button00">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:maxLines="1"
				android:text="00" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/buttonDot">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="." />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			android:id="@+id/buttonPerc">

			<TextView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="%" />

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			style="@style/AppTheme.Dialog.Widget.Button"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center"
			app:cardBackgroundColor="@color/material_green_100"
			android:id="@+id/buttonOk">

			<ImageView
				style="@style/AppTheme.Dialog.Widget.Button.Text"
				android:layout_width="30dp"
				android:layout_height="fill_parent"
				android:layout_marginBottom="0dp"
				android:layout_marginTop="0dp"
				android:src="@drawable/ic_check" />

		</android.support.v7.widget.CardView>

	</LinearLayout>

</LinearLayout>
