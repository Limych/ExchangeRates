<resources>

	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/accent</item>
		<item name="actionMenuTextColor">@color/icons</item>
		<item name="colorButtonNormal">@color/background</item>
	</style>

	<style name="AppTheme" parent="AppTheme.Base">
		<item name="android:divider">@drawable/separator</item>
		<item name="android:textColor">@color/primary_dark_material_light</item>
	</style>

	<style name="AppTheme.NoTitleBar">
		<item name="windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="AppTheme.Widget.ListItem" parent="AppTheme">
	</style>

	<style name="AppTheme.Widget.ListItem.Small" parent="AppTheme.Widget.ListItem">
		<item name="android:textSize">11sp</item>
	</style>

	<style name="AppTheme.HeaderBar" parent="AppTheme.Base">
		<item name="android:background">?colorPrimary</item>
		<item name="android:elevation">@dimen/headerbar_elevation</item>
	</style>

	<style name="AppTheme.Dialog.Base" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="AppTheme.Dialog" parent="AppTheme.Dialog.Base">
		<item name="android:background">@color/dialog_background</item>
		<item name="android:elevation">8dp</item>
	</style>

	<style name="AppTheme.Dialog.Caption" parent="TextAppearance.AppCompat.Caption">
	</style>



	<!-- Calculator -->

	<style name="AppTheme.CalculatorLayout" parent="AppTheme.Dialog.Base">
		<item name="android:background">@color/dialog_background</item>
		<item name="android:elevation">8dp</item>
	</style>

	<style name="AppTheme.CalculatorPadButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/calculator_button_text</item>
		<item name="android:textSize">@dimen/calculator_button_text_color</item>
	</style>

	<style name="AppTheme.CalculatorPadButton.Operator" parent="AppTheme.CalculatorPadButton">
		<item name="android:textColor">@color/calculator_button_operator_text</item>
	</style>



	<!-- Widget styles -->

	<style name="AppWidget.Base" parent="AppTheme.Base">
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
	</style>

	<style name="AppWidget" parent="AppWidget.Base">
		<item name="android:colorBackground">@color/widget_background</item>
	</style>

	<style name="AppWidget.Body" parent="AppWidget.Base">
		<item name="android:textColor">@color/widget_text</item>
		<item name="android:textSize">13sp</item>
		<item name="android:shadowColor">@color/text_shadow</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
	</style>

	<style name="AppWidget.Small" parent="AppWidget.Body">
		<item name="android:textSize">10sp</item>
	</style>

</resources>
