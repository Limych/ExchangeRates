<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/accent</item>
		<item name="actionMenuTextColor">@color/icons</item>
		<item name="colorButtonNormal">@color/background</item>
	</style>

	<style name="AppTheme" parent="AppTheme.Base">
		<item name="android:divider">@drawable/separator</item>
		<item name="android:textColor">@color/primary_dark_material_light</item>
	</style>

	<style name="AppTheme.NoTitleBar">
		<item name="windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="AppTheme.Widget.ListItem" parent="AppTheme">
	</style>

	<style name="AppTheme.Widget.ListItem.Small" parent="AppTheme.Widget.ListItem">
		<item name="android:textSize">10sp</item>
	</style>

	<style name="AppTheme.HeaderBar" parent="AppTheme.Base">
		<item name="android:background">?colorPrimary</item>
		<item name="android:elevation">@dimen/headerbar_elevation</item>
	</style>

	<style name="AppTheme.Dialog.Base" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="AppTheme.Dialog" parent="AppTheme.Dialog.Base">
		<item name="android:elevation">8dp</item>
		<item name="android:windowBackground">@color/primary_light</item>
		<item name="android:background">@color/primary_light</item>
	</style>

	<style name="AppTheme.Dialog.Widget.Button" parent="android:style/Widget.Material.Button">
	</style>

	<style name="AppTheme.Dialog.Widget.Button.Text" parent="AppTheme.Dialog.Base">
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
		<item name="android:textColor">@color/secondary_text</item>
		<item name="android:textSize">24sp</item>
		<item name="android:minWidth">45dp</item>
		<item name="android:minHeight">40dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_gravity">center</item>
	</style>



	<!-- Widget styles -->

	<style name="AppWidget.Base" parent="AppTheme.Base">
		<item name="android:shadowColor">@color/text_shadow</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
	</style>

	<style name="AppWidget" parent="AppWidget.Base">
		<item name="android:colorBackground">@color/widget_background</item>
	</style>

	<style name="AppWidget.Body" parent="AppWidget.Base">
		<item name="android:textSize">13sp</item>
	</style>

	<style name="AppWidget.Small" parent="AppWidget">
		<item name="android:textSize">10sp</item>
	</style>

</resources>
